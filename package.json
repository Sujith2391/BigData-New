{
  "name": "student-record-management-system",
  "version": "1.0.0",
  "description": "Student Record Management System built with Node.js, Express, and MongoDB.",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev --prefix client\"",
    "start": "node src/app.js",
    "build": "npm install --prefix client && npm run build --prefix client",
    "setup": "node scripts/setup.js",
    "teardown": "node scripts/teardown.js",
    "seed": "node scripts/seed.js",
    "analytics": "node scripts/analyticsDemo.js",
    "lint": "eslint \"src/**/*.js\" \"scripts/**/*.js\""
  },
  "keywords": [
    "student",
    "records",
    "express",
    "mongodb",
    "crud"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.11.1",
    "mongodb": "^6.8.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.1.7"
  }
}